const usageStats = {
  totalDownloads: '12,847',
  activeUsers: '2,341',
  institutionUsers: '847',
  countries: '23',
  topDownloads: [
    'ClearLane Policy Brief',
    'Complete Dataset',
    'Student Impact Analysis',
    'Implementation Timeline'
  ]
